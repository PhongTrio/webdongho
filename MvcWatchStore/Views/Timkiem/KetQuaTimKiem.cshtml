@using MvcWatchStore.Models
@using PagedList.Mvc;
@model PagedList.PagedList<DONGHO>
@{
    ViewBag.Title = "KetQuaTimKiem";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}
<h2 style="text-align:center; color:red">Kết quả tìm kiếm</h2>
<div>@ViewBag.Thongbao</div>
<div class="row">
    @foreach (var Dongho in Model)
    {
        <div class="col-sm-4 col-lg-4 col-md-4">
            <div class="thumbnail">
                <a href="@Url.Action("Details","MvcWatchStore", new { id = Dongho.Madongho })">
                    <img alt="@Dongho.Tendongho" src="~/Hinhsanpham/@Dongho.Anhbia" width="100" />

                    <div>
                        <br />
                        <h4 style="text-align:center">
                            @Dongho.Tendongho
                        </h4>
                        <h5 style="text-align:center; color:darkred">
                            @String.Format("{0:0,0}", Dongho.Giaban) VNĐ
                        </h5>

                        <p></p>

                    </div>
                    <div class="ratings">
                        <p class="pull-right">15 reviews</p>
                        <p>
                            <span class="glyphicon glyphicon-star"></span>
                            <span class="glyphicon glyphicon-star"></span>
                            <span class="glyphicon glyphicon-star"></span>
                            <span class="glyphicon glyphicon-star"></span>
                            <span class="glyphicon glyphicon-star"></span>
                        </p>
                    </div>
                </a>
            </div>
        </div>
    }
</div>
</table>

<div class="MenuTrang">
    @Html.PagedListPager(Model, page => Url.Action("KetQuaTimKiem", new { page = page, @sTuKhoa = ViewBag.TuKhoa }))
</div>
<style>
    .MenuTrang li {
        display: inline;
    }
</style>
