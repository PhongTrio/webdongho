@using MvcWatchStore.Models
@using PagedList.Mvc;
@model PagedList.IPagedList<MvcWatchStore.Models.LOAISP>

@{
    ViewBag.Title = "Loai";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2 style="text-align:center;color:royalblue">QUẢN LÝ THÔNG TIN LOẠI</h2>

<p>
    @Html.ActionLink("Thêm mới", "Themmoiloai")
</p>
<table class="table" border="1">
    <tr>
        <th style="width:100px">Tên Loại</th>
        
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.TenLoai)
            </td>
           
            <td>
                @Html.ActionLink("Sửa", "Sualoai", new { id = item.MaLoai }) |
                @Html.ActionLink("Chi tiết", "Chitietloai", new { id = item.MaLoai }) |
                @Html.ActionLink("Xóa", "Xoaloai", new { id = item.MaLoai })
            </td>
        </tr>
    }

</table>

@* Tao lien ket cac trang*@

<div class="MenuTrang">
    @Html.PagedListPager(Model, Page => Url.Action("Loai", new { Page = Page }))
</div>
<style>
    .MenuTrang li {
        display: inline;
    }
</style>