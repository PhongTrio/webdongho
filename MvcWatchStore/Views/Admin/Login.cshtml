
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">

<head>

    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Trang quản trị</title>

    <!-- CSS -->
    <link href="~/Content/assets/bootstrap/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/assets/font-awesome/css/font-awesome.css" rel="stylesheet" />    
    <link href="~/Content/assets/css/form-elements.css" rel="stylesheet" />
    <link href="~/Content/assets/css/style.css" rel="stylesheet" />

    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
        <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
        <script src="https://oss.maxcdn.com/libs/respond.js/1.4.2/respond.min.js"></script>
    <![endif]-->
    <!-- Favicon and touch icons -->
 
</head>

<body>

    <div style="padding-top:100px" class="container">
        <div class="row">

            <div class="col-md-4 col-md-offset-4">


                <div class="login-panel panel panel-default">
                    <h4 style="text-align:center; color : red">ĐĂNG NHẬP HỆ THỐNG QUẢN TRỊ</h4>
                    <div class="panel-heading">
                        <h3 class="panel-title">Vui lòng nhập tên đăng nhập và mật khẩu</h3>

                        <h4 style="color:red; text-align:center"> @ViewBag.Thongbao</h4>
                    </div>
                    <div class="panel-body">
                        @using (Html.BeginForm())
                        {
                            @Html.ValidationSummary(true)

                            <form role="form">
                                <fieldset>
                                    <div class="form-group">
                                        <label class="sr-only" for="form-username">Tên đăng nhập :</label>
                                        <input type="text" name="username" placeholder="Tên đăng nhập..." class="form-username form-control" id="form-username" />
                                        @ViewData["Loi1"]
                                    </div>
                                    <div class="form-group">
                                        <label class="sr-only" for="form-password">Mật khẩu :</label>
                                        <input type="password" name="password" placeholder="Mật khẩu..." class="form-password form-control" id="form-password" />
                                        @ViewData["Loi2"]
                                    </div>
                                    <div class="checkbox">
                                        <label>
                                            <input name="remember" type="checkbox" value="Remember Me">Ghi nhớ tài khoản
                                        </label>
                                    </div>
                                    <!-- Change this to a button or input when using this as a form -->
                                    <button type="submit" class="btn btn-lg btn-success btn-block">Đăng nhập</button>
                                </fieldset>
                            </form>
                        }

                    </div>
                </div>
            </div>
        </div>
    </div>



    <!-- Javascript -->
    <script src="~/Content/assets/js/jquery-1.11.1.min.js"></script>
    <script src="~/Content/assets/bootstrap/css/bootstrap.min.css" rel="stylesheet" />
    <script src="~/Content/assets/js/jquery.backstretch.min.js"></script>
    <script src="~/Content/assets/js/scripts.js"></script>

    <!--[if lt IE 10]>
        <script src="assets/js/placeholder.js"></script>
    <![endif]-->

</body>

</html>